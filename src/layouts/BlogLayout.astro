---
import BaseLayout from "./BaseLayout.astro";
import { siteConfig } from "../config/site";

// 布局属性
interface Props {
  title?: string;
  description?: string;
}

const {
  title = `博客 | ${siteConfig.name}`,
  description = "个人博客文章内容",
} = Astro.props;
---

<BaseLayout title={title} description={description} fixedFooter={false}>
  <div class="blog-container">
    <slot />
  </div>
</BaseLayout>

<style>
  .blog-container {
    width: 100%;
    padding-bottom: 2rem;
  }
</style>
