---
import "../styles/global.css";
import Header from "../components/Header";
import Footer from "../components/Footer";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="个人博客网站，记录项目和任务进展" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>One Person Company</title>
    <!-- 初始化主题脚本，防止闪烁 -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="overflow-hidden">
    <Header client:load />
    <main class="scroll-container h-screen">
      <slot />
    </main>
    <div class="fixed-footer">
      <Footer />
    </div>

    <script>
      import { setupScrollAnimation } from "../lib/scroll-animation";

      // 当DOM加载完成后执行
      document.addEventListener("DOMContentLoaded", () => {
        setupScrollAnimation();
      });
    </script>

    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
      }

      .scroll-container {
        scroll-snap-type: y mandatory;
        overflow-y: auto;
        height: calc(100vh - 80px); /* 减去Header和Footer的高度 */
        scroll-behavior: smooth;
        padding-bottom: 80px; /* 为固定的Footer留出空间 */
      }

      /* 为部分提供滚动捕捉点 */
      :global(section) {
        scroll-snap-align: start;
        height: 100vh;
        position: relative;
      }

      /* 固定底部Footer */
      .fixed-footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        background-color: var(--background);
        border-top: 1px solid var(--border);
      }

      /* 确保最后一个section留出足够空间 */
      :global(section:last-of-type) {
        margin-bottom: 60px;
      }
    </style>
  </body>
</html>
