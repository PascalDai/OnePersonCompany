---
import "../styles/global.css";
import Header from "../components/Header";
import Footer from "../components/Footer";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="个人博客网站，记录项目和任务进展" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>One Person Company</title>
    <!-- 初始化主题脚本，防止闪烁 -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body>
    <Header client:load />
    <main class="scroll-container">
      <slot />
    </main>
    <Footer />

    <script>
      import { setupScrollAnimation } from "../lib/scroll-animation";

      // 当DOM加载完成后执行
      document.addEventListener("DOMContentLoaded", () => {
        setupScrollAnimation();
      });
    </script>

    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      .scroll-container {
        scroll-snap-type: y proximity; /* 改为proximity，让滚动更自然 */
        overflow-y: auto;
        min-height: calc(100vh - 80px); /* 减去header的高度 */
        scroll-behavior: smooth;
      }

      /* 为部分提供滚动捕捉点 */
      :global(section) {
        scroll-snap-align: start;
        min-height: 100vh; /* 改为min-height允许内容自然延伸 */
      }

      /* 让Dashboard和Footer一起出现 */
      :global(section#dashboard) {
        padding-bottom: 4rem;
        min-height: calc(100vh - 300px);
        display: flex;
        flex-direction: column;
      }

      /* 确保Footer可见 */
      :global(footer) {
        scroll-snap-align: end;
        position: relative;
        z-index: 10;
      }
    </style>
  </body>
</html>
